<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.example.android.project_1.MainActivity">

        <View
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:background="@color/color_background_view" />

        <TextView
            android:id="@+id/ourinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_b"
            android:gravity="center"
            android:text="@string/info"
            android:textSize="@dimen/size_text_ourinfo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/color_background_view" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/bcoffee" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginRight="36dp"
                android:background="@color/background_b"
                android:gravity="center"
                android:text="@string/number"
                android:textColor="@color/color_text_w"
                android:textSize="@dimen/size_text_info" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="center"
                android:src="@drawable/pho" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fb"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginRight="36dp"
                android:gravity="center"
                android:text="facebook.com/LikeBCoffee/"
                android:textColor="@color/color_text_b"
                android:textSize="@dimen/size_text_info" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="center"
                android:src="@drawable/fbook" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginRight="36dp"
                android:background="@color/background_b"
                android:gravity="center"
                android:text="info@b-coffee.pl"
                android:textColor="@color/color_text_w"
                android:textSize="@dimen/size_text_info" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="center"
                android:src="@drawable/mess" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coffeeb"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="@string/text"
                android:textColor="@color/color_text_b"
                android:textSize="@dimen/size_text_info2" />

            <ImageView
                android:id="@+id/coffeeb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/coffeeb" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>